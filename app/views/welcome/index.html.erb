<table>
  <thead>
    <th>Post ID</th>
    <th>Author</th>
    <th>Content</th>
    <th>Age</th>
  </thead>
  <tbody>
    <% prv_post_id = nil %>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p.post_id %></td>
        <td><%= p.author.name %></td>
        <td><%= p.content %></td>
        <td style="white-space:nowrap"><%= time_ago_in_words p.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts %>